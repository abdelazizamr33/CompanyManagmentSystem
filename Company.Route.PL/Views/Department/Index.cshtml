@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}
@**@
<h1>All Departments</h1>

<br />
<br />

<a asp-action="Create" asp-controller="Department" class="btn btn-primary"> Create Department</a>

<br />
<br />

@if(Model.Count()>0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date Of Creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreateAt</td>
                    <td>
                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id" >Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-info">
        <h4 >There are No Department :(</h4>
    </div>
}

