@model CreateDepartmentDTO
@{
    ViewData["Title"] = "Create";
}

<h1>Create Department</h1>
<br />
<br />
<form asp-action="Create">
    <div class="my-3">
        <label asp-for="Code"class="col-form-label">Code</label>
        <input asp-for="Code" type="text" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label asp-for="Name" class="col-form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label asp-for="CreateAt" class="col-form-label">Create Date</label>
        <input  asp-for="CreateAt" type="Date" class="form-control" />
        <span asp-validation-for="CreateAt" class="text-danger"></span>
    </div>
    <div class="my-3">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-light">Back to List</a>
    </div>
</form>


