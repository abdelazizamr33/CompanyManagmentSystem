@model Department;
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>
<br />
<br />

<form asp-action="Edit">
    <div class="my-3">
        <label asp-for="Code" class="col-form-label">Code</label>
        <input asp-for="Code" type="text" class="form-control" value="@Model.Code"  />
    </div>
    <div class="my-3">
        <label asp-for="Name" class="col-form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" value="@Model.Name"  />
    </div>
    <div class="my-3">
        <label asp-for="CreateAt" class="col-form-label">Create Date</label>
        <input asp-for="CreateAt" type="date" class="form-control" value="@Model.CreateAt.ToString("yyyy-MM-dd")" />
    </div>
    <div class="my-3">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-light">Back to List</a>
    </div>
</form>
