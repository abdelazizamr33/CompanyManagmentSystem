@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Page</h1>
<br />
<br />

<form asp-action="Delete">
    <div class="my-3">
        <label asp-for="Code" class="col-form-label">Code</label>
        <input asp-for="Code" type="text" class="form-control" value="@Model.Code" readonly />
    </div>
    <div class="my-3">
        <label asp-for="Name" class="col-form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" value="@Model.Name" readonly />
    </div>
    <div class="my-3">
        <label asp-for="CreateAt" class="col-form-label">Create Date</label>
        <input asp-for="CreateAt" type="text" class="form-control" value="@Model.CreateAt" readonly />
    </div>
    <div class="my-3">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-light">Back to List</a>
    </div>
</form>
